<!-- FLASH -->
<%= render 'shared/flash_danger' %>

<!-- VIEW -->
<div class="device_frame">
  <h2 class="mb-3">ログイン</h2>
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group mb-3">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <%= f.submit 'ログイン', class: "btn btn-primary my-3 form-control" %>
  <% end %>
  <div class="text-center">
    <a href="/signup" class="text-decoration-none">新しいアカウントを作成</a>
  </div>
</div>
<div class="device_frame_guest">
  <%= link_to "ゲストログイン", guest_login_path, method: :post, class: "btn btn-warning form-control" %>
</div>
