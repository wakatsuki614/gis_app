<%= form_for(@user) do |f| %>
  <div class="form-group label_user_new mt-4">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group label_user_new">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="accbox">
    <div class="accshow">
      <div class="form-group label_user_new">新しいパスワード<br><%= f.password_field :password, class: 'form-control' %></div>
      <div class="form-group label_user_new">新しいパスワードを再入力<br><%= f.password_field :password_confirmation, class: 'form-control' %></div>
    </div>
  </div>
  <div class="al-c submit_user_new mt-4"><%= f.submit 'プロフィール編集を完了する', class: 'btn btn-primary', style: 'width: 400px;' %></div>
<% end %>
