<!-- TITLE -->
<% provide(:title, "スクール登録") %>

<!-- FLASH -->
<%= render 'shared/flash_danger' %>

<!-- VIEW -->
<div class="device_frame">
  <h2 class="mb-3">スクール情報登録</h2>
  <%= form_for(@school) do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="form-group mb-3">
      <%= f.label :school_name, 'スクール名' %>
      <%= f.text_field :school_name, placeholder: "GIスクール", class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :school_email, 'メールアドレス' %>
      <%= f.email_field :school_email, placeholder: "gisports@example.com", class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :phone, '電話番号' %>
      <%= f.telephone_field :phone, placeholder: "半角数字で入力してください", class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :address, '所在地' %>
      <%= f.text_field :address, placeholder: "所在地を入力", class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :introduce, 'スクール紹介' %>
      <%= f.text_area :introduce, :size => "80x5", placeholder: "255文字以内で入力してください", class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :home_page, 'ホームページ' %>
      <%= f.url_field :home_page, placeholder: "URLを入力", class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :image, 'スクール画像' %>
      <%= f.file_field :image, class: "d-block" %>
    </div>
    <%= f.submit '登録', class: "btn btn-primary my-3 form-control" %>
  <% end %>
</div>
