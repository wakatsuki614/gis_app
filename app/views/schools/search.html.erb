<div class="container px-5">
  <h3 class="my-4 ms-3 p-1"><%= @schools.count %> 件の検索結果</h3>
  <div class="row">
    <div class="col">
      <% if @schools.count == 0 %>
        <div class="text-center py-4">
          <span style="font-size: 20px;">検索条件にヒットするスクールがありませんでした。</span>
        </div>
      <% else %>
        <% @schools.each do |school| %>
          <div class="row pt-3 mb-5 school-list">
            <div class="col text-center">
              <% if school.image? %>
                <%= image_tag school.image.url, size: '320x240' %>
              <% else%>
                <%= image_tag 'noimage.jpg', size: '320x240' %>
              <%end%>
            </div>
            <ul class="col list_search position-relative">
              <li style="font-size: 30px;" class="mt-4 mb-3"><%= school.school_name %></li>
              <li style="font-size: 20px;" class="mt-3"><%= school.address %></li>
              <li class="list_search_link"><%= link_to "スクール詳細", school_path(school) %></li>
            </ul>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-4">
      <div style="border-radius: 4px;" class="border p-3">
        <h3 class="text-center mb-3 search-side-menu py-2">会員ログイン</h3>
        <%= form_for(:session, url: login_path) do |f| %>
          <div class="form-group">
            <%= f.label :email, 'メールアドレス' %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, 'パスワード' %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <%= f.submit 'ログイン', class: "btn btn-primary mt-3 form-control" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
