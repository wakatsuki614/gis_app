<div class="container px-5">
  <h3 class="my-4 ms-3 p-1">登録済スクール一覧</h3>
  <% if current_user.schools.count == 0 %>
    <div class="text-center py-4">
      <span style="font-size: 20px;">スクール情報が登録されていません。</span>
    </div>
  <% else %>
    <div class="row text-center">
      <table>
        <thead>
          <tr>
            <th class="col">編集</th>
            <th class="school_name_index">スクール名</th>
            <th class="address_index">所在地</th>
            <th class="school_updated_at_index">最終更新日</th>
          </tr>
        </thead>
        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <% if school.user_id == current_user.id %>
                <td class="col"><%= link_to "編集", edit_school_path(school.id), class: "text-decoration-none" %></td>
                <td class="school_name_index"><%= school.school_name %></td>
                <td class="address_index"><%= school.address %></td>
                <td class="school_updated_at_index"><%= school.updated_at.strftime("%Y/%-m/%-d") %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
