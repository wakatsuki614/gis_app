<div class="container px-5">
  <h3 class="my-4 ms-3 p-1">登録済スクール一覧</h3>
  <% if current_user.schools.count == 0 %>
    <div class="text-center pt-4">
      <span style="font-size: 20px;">スクール情報が登録されていません。</span>
    </div>
  <% else %>
    <div class="row text-center">
      <table>
        <thead>
          <tr>
            <th class="col">編集</th>
            <th style="width: 30%;">スクール名</th>
            <th style="width: 40%;">所在地</th>
            <th style="width: 20%;">最終更新日</th>
          </tr>
        </thead>
        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <% if school.user_id == current_user.id %>
                <td class="col"><%= link_to "編集", edit_school_path(school.id), class: "text-decoration-none" %></td>
                <td style="width: 30%;"><%= school.school_name %></td>
                <td style="width: 40%;"><%= school.address %></td>
                <td style="width: 20%;"><%= school.updated_at.strftime("%Y年%m月%d日")%></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
